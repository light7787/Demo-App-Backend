          node-version: 18
 
      - name: ğŸ“¥ Install dependencies
        run: npm install
 
      - name: ğŸ›  Install EAS CLI
        run: npm install -g eas-cli
 
      - name: ğŸ” Authenticate with Expo
        run: eas whoami || echo "${{ secrets.EXPO_TOKEN }}" | eas login --token
 
      - name: ğŸš€ Build Android App
