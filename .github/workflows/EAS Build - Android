name: EAS Build - Android
 
on:
  workflow_dispatch: # allows manual trigger from GitHub Actions UI
 
jobs:
  eas-build:
    runs-on: ubuntu-latest
 
    steps:
      - name: ğŸ§¾ Checkout code
        uses: actions/checkout@v3
 
      - name: ğŸ“¦ Set up Node.js
        uses: actions/setup-node@v3
